---
import NavItem from "./NavItem.astro";
---

<div class="fixed w-full z-10 shadow-[0px_4px_8px_0px_#8b1d6d]">
  <nav class="bg-dark-500">
    <div
      class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
    >
      <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
        <img class="h-12 object-contain" src="/Logo.png" />
      </a>
      <button
        data-collapse-toggle="navbar-default"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg lg:hidden focus:outline-none focus:ring-2 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-default"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
      <div class="hidden w-full lg:block lg:w-auto" id="navbar-default">
        <ul
          class="font-medium flex flex-col p-2 lg:p-0 mt-4 lg:flex-row lg:gap-x-2 rtl:space-x-reverse lg:mt-0"
        >
          <NavItem href="/about">About</NavItem>
          <NavItem href="/#tickets">Tickets</NavItem>
          <NavItem href="/agenda">Agenda</NavItem>
          <NavItem href="/#speakers">Speakers</NavItem>
          <NavItem href="/sessions">Sessions</NavItem>
          <div class="block lg:hidden">
            <NavItem href="/#cfs">Call for Speakers</NavItem>
          </div>
          <NavItem href="/sponsors">Sponsors</NavItem>
          <div class="block lg:hidden">
            <NavItem href="https://forms.gle/oVE4KiZcvmt4LAzj6"
              >Call for Sponsors</NavItem
            >
          </div>
          <div class="block lg:hidden">
            <NavItem href="https://forms.gle/vKPhwgVvGefC5z6N9"
              >Call for Volunteers</NavItem
            >
          </div>
          <NavItem href="/faq">FAQ</NavItem>
        </ul>
      </div>
    </div>
  </nav>
</div>
